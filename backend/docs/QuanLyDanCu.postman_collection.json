            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hoKhauId\": 1,\n  \"dotThuPhiId\": 1,\n  \"soTienDaThu\": 60000,\n  \"ngayThu\": \"2025-01-15\",\n  \"months\": \"1\",\n  \"ghiChu\": \"Đã thanh toán + phụ phí\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/thu-phi-ho-khau/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "thu-phi-ho-khau", "1"]
            }
          }
        },
        {
          "name": "Xóa thu phí",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/thu-phi-ho-khau/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "thu-phi-ho-khau", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Hộ Khẩu",
      "item": [
        {
          "name": "Lấy tất cả hộ khẩu",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/hokhau",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hokhau"]
            }
          }
        },
        {
          "name": "Lấy hộ khẩu theo ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/hokhau/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hokhau", "1"]
            }
          }
        }
      ]
    }
  ]
}
