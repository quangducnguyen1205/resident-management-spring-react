            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hoKhauId\": 1,\n  \"dotThuPhiId\": 1,\n  \"soTienDaThu\": 50000,\n  \"ngayThu\": \"2025-01-15\",\n  \"months\": \"1\",\n  \"ghiChu\": \"Đã thanh toán đủ\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/thu-phi-ho-khau",
