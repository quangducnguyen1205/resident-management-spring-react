{
  "info": {
    "name": "Quản Lý Dân Cư API",
    "description": "Collection for testing Quản Lý Dân Cư REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenDangNhap\": \"admin\",\n  \"matKhau\": \"password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Đợt Thu Phí",
      "item": [
        {
          "name": "Lấy tất cả đợt thu phí",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/dot-thu-phi",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dot-thu-phi"]
            }
          }
        },
        {
          "name": "Lấy đợt thu phí theo ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/dot-thu-phi/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dot-thu-phi", "1"]
            }
          }
        },
        {
          "name": "Tạo đợt thu phí mới",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenDot\": \"Thu phí quản lý tháng 1/2025\",\n  \"loai\": \"QUAN_LY\",\n  \"ngayBatDau\": \"2025-01-01\",\n  \"ngayKetThuc\": \"2025-01-31\",\n  \"dinhMuc\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/dot-thu-phi",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dot-thu-phi"]
            }
          }
        },
        {
          "name": "Cập nhật đợt thu phí",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenDot\": \"Thu phí quản lý tháng 1/2025 (Đã cập nhật)\",\n  \"loai\": \"QUAN_LY\",\n  \"ngayBatDau\": \"2025-01-01\",\n  \"ngayKetThuc\": \"2025-01-31\",\n  \"dinhMuc\": 60000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/dot-thu-phi/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dot-thu-phi", "1"]
            }
          }
        },
        {
          "name": "Xóa đợt thu phí",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/dot-thu-phi/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dot-thu-phi", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Thu Phí Hộ Khẩu",
